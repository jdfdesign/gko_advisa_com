<% content_for :slideshow do %>
	<div class="row-fluid"> 
		<div class="span12">
			<%= render "images/shared/carousel", :images => @page.images, :image_style => site.preferred_image_carousel_size %>
		</div>
	</div>
<% end if @page.images.try(:any?) %>
<div class="row-fluid">
	<div class="span12">
		<%= render_page_title(@page.title) %>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 html-text">
		<%= render_html_text(@page.body) %>
	</div>
	<div class="span6 html-text">
		<p>Vous souhaitez obtenir des informations complémentaires dans un domaine lié à l’immobilier en général et à Saint-Barthélemy en particulier. Notre équipe reste à votre entière disposition pour répondre à vos questions.</p>
		<%= simple_form_for(:contact_form, :url => contact_forms_path, :method => :post, :html => {:class => [:'form-horizontal']}) do |f| %>
		    <%= hidden_field_tag(:return_to, request.url) %>
		    <%= f.error_notification %>
		    <%= f.input :civility, 
						:collection => ['Mlle', 'Mme', 'Mr'],
						:hint => false,
						:required => true %>
			<%= f.input :lastname, 
						:hint => '' %>						
			<%= f.input :firstname, 
						:hint => false %>
		    <%= f.input :email, 
						:hint => false %>
		    <%= f.input :phone, 
						:hint => false,
						:required => false %>
			<%= f.input :country,
			 			:collection => Country.all,
						:hint => false,
						:required => false %>
		    <%= f.input :message, 
						:as => :text, 
						:hint => false, 
						:input_html => {:rows => 6} %>
			<%= f.input :nickname, 
						:as => :hidden,
						:hint => 'Leave this field blank!' %>
		    <div class='controls'>
		      <%= f.button :submit, t("send_inquiry"), :class => 'btn btn-block btn-large btn-inverse', :disable_with => "Submitting..." do %>	<i class="icon-arrow-right"></i>
			<% end %>
			</div>
		<% end %>
		<%= "<p class='small'><em>(*): champs obligatoires.<br>Chaque information communiquée sera conservée confidentielle.</em></p>".html_safe %>
	</div>	
</div>
